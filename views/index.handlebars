<h1 class="headings">BURGER PARTY!</h1><br>
<div class="container">

  <div class="row">
    <div class="col-4">
      <h2 class="headings">Burgers that need to be eaten!!</h2>
    </div>
    <div class="col-4">
      <h2 class="headings">Add a Burger</h2>
    </div>
    <div class="col-4">
      <h2 class="headings">Burgers that have been devoured!</h2>
    </div>
  </div>


  <div class="row">


    <div class="col-4">



      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-4">


      <form class="create-form formLook">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Hungry?</label><br>
          <input type="radio" name="devoured" value="0"> ready to eat!<br>
          <input type="radio" name="devoured" value="1"> devoured
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>

    <div class="col-4">



      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <div class="row">
    <div class="col-4">

    </div>
    <div class="col-4">
      
    </div>
    <div class="col-4">

    </div>
  </div>
</div>